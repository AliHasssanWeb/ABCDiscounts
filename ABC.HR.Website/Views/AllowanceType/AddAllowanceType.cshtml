</style>

<div class="d-sm-flex align-items-center justify-content-between border-bottom">
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link " href="~/TaxType/AddTaxType" aria-controls="overview" aria-selected="true">Add Tax Type</a>
        </li>
        @*<li class="nav-item">
            <a class="nav-link " href="~/EmployeeTaxConfiguration/AddTaxConfiguration" aria-controls="overview" aria-selected="true">Add Tax Configuration</a>
        </li>*@
        <li class="nav-item">
            <a class="nav-link active" href="~/AllowanceType/AddAllowanceType" role="tab" aria-selected="false">Add Allowance Type</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="~/DeductionType/AddDeductionType" role="tab" aria-selected="false">Add Deduction Type</a>
