{
    <script>toastr.success("@TempData["responseUpdatePayRoll"].ToString()");</script>

}

@if (TempData["MsgDeletePayRoll"] != null)
{
    <script>toastr.success("@TempData["MsgDeletePayRoll"].ToString()");</script>

}

@if (TempData["RecordGenerate"] != null)
{
    <script>toastr.success("@TempData["RecordGenerate"].ToString()");</script>

}


<script>
    function ConfirmDeletepayRoll(id) {


        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this imaginary file!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "GET",
                        url: "DeletePayRoll/" + id,

                        success: function () {
                            toastr.success("Record Deleted");
                            window.setTimeout(function () {
                                window.location.href = 'ManageContractPayRoll';
                            }, 500);
                            //window.location.href = "/HumanResource/Employees/ManageTaxType/";




                        }
                    });
                } else {
                    toastr.info("Your file is safe!");
                }
            });


    }
    function ConfirmUpdate() {
        return confirm('Are you sure you want to update record?');
    }



</script>

