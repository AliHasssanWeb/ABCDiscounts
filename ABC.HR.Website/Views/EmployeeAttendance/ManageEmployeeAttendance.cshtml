@model IEnumerable<ABC.EFCore.Repository.Edmx.EmpAttendance>

@{
    ViewData["Title"] = "ManageAttendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

<div>
    <a asp-action="AddEmployeeAttendance"><Span class="btn btn-success btn-icon background bottom15"><i class="mdi mdi-plus">Add New Attendance</i></Span></a>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Manage Attendance </h4>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <div id="order-listing_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="atendencesss" class="table dataTable no-footer" role="grid" aria-describedby="order-listing_info">
                                    <thead>
                                        <tr>
                                            <th>
                                                Sr.
                                            </th>
                                            <th>
                                                Employee Code
                                            </th>
                                            <th>
                                                Employee Name
                                            </th>

                                            <th>
                                                @Html.DisplayNameFor(model => model.AttendanceDate)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.TimeIn)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.TimeOut)
                                            </th>
                                            <th>
                                                Working Hours
                                            </th>

                                            <th>
                                                @Html.DisplayNameFor(model => model.Late)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.OverTime)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.IsApprove)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    @{var i = 0; }
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            @foreach (var item in Model)
                                            {
                                                i = i + 1;
                                                <tr>

                                                    <td>
                                                        @i
                                                    </td>
                                                    <td>
                                                        @foreach (var item1 in ViewBag.EmployeeName)
                                                        {
                                                            if (item1.EmployeeId == item.EmployeeId)
                                                            {
                                                                @item1.EmployeeCode
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @foreach (var item1 in ViewBag.EmployeeName)
                                                        {
                                                            if (item1.EmployeeId == item.EmployeeId)
                                                            {
                                                                @item1.FullName
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.AttendanceDate)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TimeIn)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TimeOut)
                                                    </td>
                                                    <td>
                                                        @{
                                                            var timeinn = item.TimeIn;
                                                            var timeout = item.TimeOut;
                                                            var hourwork = (DateTime.Parse(timeout) - DateTime.Parse(timeinn)).TotalHours;
                                                        }
                                                        @hourwork
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Late)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.OverTime)
                                                    </td>
                                                    <td>
                                                        @if (item.IsApprove == true)
                                                        {


                                                            <span>Approve</span>
                                                        }
                                                        else
                                                        {
                                                            <span>Not Approve</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <a title="Edit"><i style="cursor:pointer" class="mdi mdi-briefcase-edit-outline" onclick="ConfirmUpdate()? location.href='@Url.Action("UpdateEmployeeAttendance", "EmployeeAttendance", new { id = item.EmpAttendanceId })': null"></i></a>&nbsp;&nbsp;&nbsp;
                                                        |    <a title="Delete"> <i style="cursor:pointer" class="mdi mdi-trash-can" onclick="ConfirmDeleteAllownce(@item.EmpAttendanceId)"></i></a>

                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>


<script>
    $(document).ready(function () {
        $('#atendencesss').DataTable();
        $("table").removeClass("no-footer");
    });
</script>


@if (TempData["responseofAddAttendances"] != null)
{
    <script>toastr.success("@TempData["responseofAddAttendances"].ToString()");</script>

}


@if (TempData["responseUpdateAttendance"] != null)
{
    <script>toastr.success("@TempData["responseUpdateAttendance"].ToString()");</script>

}

@if (TempData["MsgDeleteAttendance"] != null)
{
    <script>toastr.success("@TempData["MsgDeleteAttendance"].ToString()");</script>

}

<script>
    function ConfirmDeleteAllownce(id) {


        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this imaginary file!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "GET",
                        url: "DeleteEmployeeAttendance/" + id,

                        success: function () {
                            toastr.success("Record Deleted");
                            window.setTimeout(function () {
                                window.location.href = 'ManageEmployeeAttendance';
                            }, 500);
                            //window.location.href = "/HumanResource/Employees/ManageTaxType/";




                        }
                    });
                } else {
                    toastr.info("Your file is safe!");
                }
            });


    }
    function ConfirmUpdate() {
        return confirm('Are you sure you want to update record?');
    }



</script>