@*@model ABC.EFCore.Repository.Edmx.EmpDeductionType*@
@model ABC.HR.Domain.Entities.ValidateDeductionType

@{
    ViewData["Title"] = "AllowanceType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between border-bottom">
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link" href="~/TaxType/AddTaxType" aria-controls="overview" aria-selected="true">Add Tax Type</a>
        </li>
        @*<li class="nav-item">
            <a class="nav-link " href="~/EmployeeTaxConfiguration/AddTaxConfiguration" aria-controls="overview" aria-selected="true">Add Tax Configuration</a>
        </li>*@
        <li class="nav-item">
            <a class="nav-link" href="~/AllowanceType/AddAllowanceType" role="tab" aria-selected="false">Add Allowance Type</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="~/DeductionType/AddDeductionType" role="tab" aria-selected="false">Add Deduction Type</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="~/LeaveType/AddLeaveType" role="tab" aria-selected="false">Add Leave Type</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/LoanType/AddLoanType" role="tab" aria-selected="false">Add Loan Type</a>
        </li>


    </ul>
</div>


<div class="card">
    <div class="card-body">
        <h1 class="card-title">Add Deduction Type</h1>

        @*<h4>EmpAllowanceType</h4>*@
        <hr />
        <div class="row container">
            <div class="col-md-12 ">
                <form asp-action="AddDeductionType">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">

                        <div class="form-group col-md-6">
                            <label asp-for="EmpDeductionTypeName" class="control-label"></label>
                            <input asp-for="EmpDeductionTypeName" class="form-control" />
                            <span asp-validation-for="EmpDeductionTypeName" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="AmountLimit" class="control-label"></label>
                            <input asp-for="AmountLimit" class="form-control ded_class" />
                            <span asp-validation-for="AmountLimit" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">


                        <div class="form-group col-md-8">

                            <label asp-for="Description" class="control-label"></label>
                            @*<textarea asp-for="Description" class="form-control"></textarea>*@
                            @*<textarea asp-for="Description" rows="4" cols="50" style="border: 1px solid #dee2e6; border-radius: 4px; "></textarea>*@
                            <textarea  asp-for="Description" class="form-control" style="min-height: 5rem;"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="IsActive" class="control-label"></label>
                            @*<input asp-for="IsActive" type="checkbox" checked/>*@
                            @Html.CheckBox("IsActive", true)
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <input type="submit" value="Create" class="btn btn-lg btn-dark me-3 wd-40" style="color:whitesmoke" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="ManageDeductionType">Back to List</a>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



}

<script>
     var inputBox = document.querySelector(".ded_class");

    var invalidChars = [
        "-",
        "+",
        "e",
    ];

    inputBox.addEventListener("keydown", function (e) {
        if (invalidChars.includes(e.key)) {
            e.preventDefault();
        }
    });
</script>