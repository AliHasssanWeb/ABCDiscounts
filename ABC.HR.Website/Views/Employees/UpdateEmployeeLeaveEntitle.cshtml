@model ABC.EFCore.Repository.Edmx.EmployeeLeaveEntitle
@{
    ViewData["Title"] = "UpdateEmployeeLeaveEntitle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@if (TempData["response"] != null)
{
    <div class="alert alert-primary" style="max-width: 46%;" id="msgalert">
        @TempData["response"].ToString()
    </div>
}
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Employee Leave Entitle</h4>
            @using (Html.BeginForm("UpdateEmployeeLeaveEntitle", "Employees", FormMethod.Post, new { @class = "forms-sample" }))
            {
                <div class="form-group">
                    <label for="NoofLeaves">Number of Leaves</label>
                    @Html.EditorFor(model => model.NoofLeaves, new { htmlAttributes = new { @class = "form-control", placeholder = "No.of Leaves" } })
                    @Html.ValidationMessageFor(model => model.NoofLeaves, "", new { @class = "text-danger db" })

                </div>
                
                <div class="form-group">
                    <label for="LeaveTypeID">Employee Number</label>
                    @Html.DropDownList("LeaveTypeID", (IEnumerable<SelectListItem>)ViewBag.LeaveTypes, "--Choose LeaveTypes--", new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-lg btn-dark me-3"><p style="color:white">Submit</p></button>


            }
        </div>
    </div>
</div>
<script>
    setTimeout(function () {
        $("#msgalert").hide();
    }, 3500);
</script>



