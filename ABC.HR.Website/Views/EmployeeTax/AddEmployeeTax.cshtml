                data: { "id": empidsal },
                dataType: "json",
                success: function (data) {
                    if (data != null) {
                          if (data.permanent == true) {
                        $("#contractType").val("Permanent");
                    }
                    else if (data.permanent == false) {
                        $("#contractType").val("Contract");
                    }
                    }
                    else {
                        $("#contractType").val("No Contract");
                    }

                }, error: function (err) {

                }

            });
        }
