@model IEnumerable<ABC.EFCore.Repository.Edmx.Vendor>
@{
    ViewBag.Title = "ManageVendor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    $(document).ready(function () {
        $('#order-listing').DataTable();
        $("table").removeClass("no-footer");
    });
</script>

@if (TempData["response"] != null)
{
    <div class="alert-success" id="msgalert">
        @TempData["response"].ToString()
    </div>
}
<div>
    <a href="@Url.Action("AddVendor","Vendor")"><Span class="btn btn-success btn-icon background bottom15"><i class="mdi mdi-plus">Add Vendor</i></Span></a>

</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">All Vendors</h4>
        <div class="row">
            <div class="col-12">
                        <div class="row">
                            <div class="col-sm-12">
                <div class="table-responsive">
                                <table id="order-listing" class="table dataTable" role="grid" aria-describedby="order-listing_info">
                                    <thead>
                                        <tr role="row">

                                            <th>
                                                Sr No.
                                            </th>
                                            <th>
                                                Full Name
                                            </th>
                                            <th>
                                                Email
                                            </th>
                                            <th>
                                                Phone
                                            </th>

                                            <th>
                                                Action
                                            </th>


                                        </tr>
                                    </thead>
                                    @{var i = 0;
                                    }
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            @foreach (var item in Model)
                                            {
                                                i = i + 1;
                                                <tr class="odd">
                                                    <td class="sorting_1">@i</td>
                                                    <td>@item.FullName</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.Phone</td>

                                                    <td>
                                                        @*<a><i style="cursor:pointer" class="mdi mdi-briefcase-edit-outline" onclick="ConfirmUpdate()? location.href='@Url.Action("UpdateItemSubCategory", "Configurations", new {area="Configuration", id = item.ID })': null"></i></a>&nbsp;&nbsp;&nbsp;*@
                                                        <a> <i style="cursor:pointer" class="mdi mdi-trash-can" onclick="ConfirmDelete()? location.href='@Url.Action("DeleteVendor", "Vendor", new { id = item.VendorId })': null"></i></a>
                                                        <a> <i style="cursor:pointer" class="mdi mdi-information" onclick=""></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function ConfirmDelete() {
        return confirm('Are you sure you want to delete?');
    }
    function ConfirmUpdate() {
        return confirm('Are you sure you want to update record?');
    }
    setTimeout(function () {
        $("#msgalert").hide();
    }, 3500);
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#order-listing tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>





