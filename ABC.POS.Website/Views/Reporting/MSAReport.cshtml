      </div>

      <div class="col-md-6">
          <div class="row"  style="justify-content:right; margin-top:10px;">
              <div class="col-md-4">
                  <div class="row" style="border:1px solid grey;">
                  <div class="col-md-12">
                  <p class="red" style=" margin-bottom: 0px;background:rgb(184, 185, 190); text-align:center; padding:5px; font-weight:bold;">Generate Data</p>
                  <i  class="fa fa-book fa-3x" style="display: table-caption;background: rgb(244, 245, 247);padding: 10px; margin: 10px 10px 10px 40px; border: 1px solid black;"></i>
                  <p class="red" style=" margin-bottom: 0px;background:rgb(184, 185, 190); text-align:center; padding:5px; font-weight:bold;">Generating Data</p>
                  </div>
              </div>
              </div>
          </div>
      </div>
  </div>


  <div class="row" style="margin:20px;">
    <div class="col-md-2" style="text-align:center;">
        <i  class="fa fa-search fa-2x" style="background: rgb(244, 245, 247);padding: 10px;  border-right: 1px solid black;  border-bottom: 1px solid black;"></i>
        <p class="icon">View Report File</p>
    </div>

    <div class="col-md-2" style="text-align:center;">
        <i  class="fa fa-plane fa-2x" style="background: rgb(244, 245, 247);padding: 10px;  border-right: 1px solid black;  border-bottom: 1px solid black;"></i>
        <p class="icon">MSA Transfer</p>
    </div>

    <div class="col-md-2" style="text-align:center;">
        <i  class="fa fa-book fa-2x" style="background: rgb(244, 245, 247);padding: 10px;  border-right: 1px solid black;  border-bottom: 1px solid black;"></i>
        <p class="icon">Negative Inventory</p>
    </div>

    <div class="col-md-2" style="text-align:center;">
        <i  class="fa fa-book fa-2x" style="background: rgb(244, 245, 247);padding: 10px;  border-right: 1px solid black;  border-bottom: 1px solid black;"></i>
        <p class="icon">Reported Inventory</p>
    </div>

    <div class="col-md-2" style="text-align:center;">
        <i  class="fa fa-user fa-2x" style="background: rgb(244, 245, 247);padding: 10px;  border-right: 1px solid black;  border-bottom: 1px solid black;"></i>
        <p class="icon">Reported Customers</p>
    </div>

    <div class="col-md-2" style="text-align:center;">
        <i  class="fa fa-file fa-2x" style="background: rgb(244, 245, 247);padding: 10px;  border-right: 1px solid black;  border-bottom: 1px solid black;"></i>
        <p class="icon">Missing Information</p>
    </div>
  </div>




<div id="state" class="w3-container report" style="display:none">
  <h2>State Reporting</h2>
  <p>Thsi is State Reporting Section.</p> 
</div>


<script>
    $(document).ready(function(){
    $("#dates").datepicker();
});
function openreport(reportName) {
  var i;
  var x = document.getElementsByClassName("report");
  for (i = 0; i < x.length; i++) {
    x[i].style.display = "none";  
  }
  document.getElementById(reportName).style.display = "block";  
}

$("#aa").click(function() {
  var date2 = $('#dates').datepicker('getDate', '+1d'); 
  date2.setDate(date2.getDate()+2); 
  $('#dates').datepicker('setDate',date2);
});

</script>