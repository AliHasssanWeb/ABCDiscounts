<div class="w3-bar w3-white">
  <button class="w3-bar-item w3-button" style="border-right:1px solid black;" onclick="openreport('msa')">MSA Reporting</button>
  <button class="w3-bar-item w3-button" style="border-right:1px solid black;" onclick="openreport('state')">State Reporting</button>
</div>

<div id="msa" class="w3-container report" style="padding-top:20px; background:white;">
  <div class="row" style="margin:0px 20px;">
      <div class="col-md-3" style="align-content:center;">
          <h4 class="blue" style="margin-top:22px">Last MSA Report</h4>
      </div>
      <div class="col-md-3">
          <label class="blue">From:</label>
          <input type="date" class="form-control blue"  />
      </div>
      <div class="col-md-3">
          <label class="blue">To:</label>
          <input type="date" class="form-control blue" />
      </div>
      <div class="col-md-3">
          <label class="blue">Dist. Code:</label>
          <input type="text" class="form-control blue" />
      </div>
  </div>


  <div class="row" style="border: 2px solid gray; margin:20px; padding-bottom:10px;">
      <div class="col-md-6" style="align-content:center;">
          <div class="row" style="margin-top:25px;">
              <div class="col-md-4" style="margin-top:10px;">
                  <h3 class="" style="margin-top:22px; font-weight:bold;">Week Ending</h3>
                    <input class="input" id="datess" type="date" /> 
              </div>
              <div class="col-md-2" style="margin-left:-33px; padding-top: 66px;">
                  <i  class="fa fa-angle-down fa-2x" style="display: table-caption;background: rgb(244, 245, 247);padding: 0px 8px;border-right: 1px solid black; border-bottom: 1px solid black;"></i>
                  <i class="fa fa-angle-up fa-2x" style="background: rgb(244, 245, 247);padding:0px 8px;border-right: 1px solid black; border-bottom: 1px solid black;"></i>
              </div>
              <div class="col-md-3" style="margin-left:-30px; padding-left:0px; padding-top: 66px;">
                  <button class="" id="aa" style="background: rgb(244, 245, 247);padding: 3px 8px;border-right: 2px solid black; border-bottom: 1px solid black;">Next Week</button>
                  <button class="" style="background: rgb(244, 245, 247);padding: 3px 8px;border-right: 2px solid black; border-bottom: 1px solid black;">Prev. Week</button>
              </div>
          </div>

      </div>
      <div class="col-md-6">
          <div class="row"  style="justify-content:right; margin-top:10px;">
              <div class="col-md-4">
                  <p class="red" style=" margin-bottom: 0px;background:rgb(184, 185, 190); text-align:center; padding:5px; font-weight:bold;">State Tax Jurisdiction</p>
                  <div class="row" style="border:1px solid grey;">
                  <div class="col-md-12">
                      <input type="checkbox" style="border-left:1px solid grey; border-top:1px solid grey;" />
                      <label class="blue" style="margin-bottom:0px; font-size:13px;">Item Label (BID)</label>
                      <p style="margin-left:15px;">(208-209)</p>

                      <input type="checkbox" style="border-left:1px solid grey; border-top:1px solid grey;" />
                      <label class="blue" style="margin-bottom:0px; font-size:13px;">Customer Label (SID)</label>
                      <p style="margin-left:15px;">(197-198)</p>
                  </div>
              </div>
              </div>
              
          </div>
      </div>
  </div>

  <div class="row" style=" margin-right:20px; ">
      <div class="col-md-12" style="text-align:right;">
          <input type="checkbox" style="border-left:1px solid grey; border-top:1px solid grey;" />
          <label class="blue" style="margin-bottom:0px; color:red; font-size:13px;">Report Inventory Based Sales Only</label>
