@model ABC.EFCore.Repository.Edmx.ArticleTypeValidate
@{
    ViewBag.Title = "ArticleType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@if (TempData["response"] != null)
{
    <div class="alert alert-primary" style="max-width: 46%;" id="msgalert">
        @TempData["response"].ToString()
    </div>
}
<div class="d-sm-flex align-items-center justify-content-between border-bottom">
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link " href="~/Configurations/ItemCategory" aria-controls="overview" aria-selected="true">ItemsCategory</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Configurations/ItemSubCategory" aria-controls="overview" aria-selected="true">Items Sub Category</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Configurations/Brand" role="tab" aria-selected="false">Manufacture</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active ps-0" href="~/Configurations/ArticleType" role="tab" aria-selected="false">Item Family</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="~/Configurations/WareHouses" role="tab" aria-selected="false">Add WareHouse</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="~/Configurations/Store" role="tab" aria-selected="false">Add Store</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="~/Configurations/AddTerminal" role="tab" aria-selected="false">Add Terminal</a>
        </li>

    </ul>
</div>
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add Family</h4>
            @*<p class="card-description">
                    Basic form layout
                </p>*@
            @using (Html.BeginForm("AddArticleType", "Configurations", FormMethod.Post, new { @class = "forms-sample" }))
            {


                <div class="form-group">
                    <label for="exampleInputUsername1">Article Type</label>
                    @Html.EditorFor(model => model.ArticleTypeName, new { htmlAttributes = new { @class = "form-control", placeholder = "Family" } })
                    @Html.ValidationMessageFor(model => model.ArticleTypeName, "", new { @class = "text-danger db" })

                </div>


                <button type="submit" class="btn btn-dark me-2"><p style=color:white>Submit</p></button>

            }
        </div>
    </div>
</div>
<script>
    setTimeout(function () {
        $("#msgalert").hide();
    }, 3500);
</script>




