@model ABC.EFCore.Repository.Edmx.Terminal
@{
    ViewData["Title"] = "AddTerminal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@if (TempData["response"] != null)
{
    <div class="alert alert-primary" style="max-width: 46%;" id="msgalert">
        @TempData["response"].ToString()
    </div>
}
<div class="d-sm-flex align-items-center justify-content-between border-bottom">
    <ul class="nav nav-tabs" role="tablist">

        <li class="nav-item">
            <a class="nav-link " href="~/Configurations/ItemCategory" aria-controls="overview" aria-selected="true">ItemsCategory</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Configurations/ItemSubCategory" aria-controls="overview" aria-selected="true">ItemsSubCategory</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Configurations/Brand" role="tab" aria-selected="false">Manufacture</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Configurations/ArticleType" role="tab" aria-selected="false">ItemFamily</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Configurations/WareHouses" role="tab" aria-selected="false"> WareHouse</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Configurations/Store" role="tab" aria-selected="false">Store</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active ps-0" href="~/Configurations/AddTerminal" role="tab" aria-selected="false">Terminal</a>
        </li>

    </ul>
</div>
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add Terminal</h4>

            @using (Html.BeginForm("AddTerminal", "Configurations", FormMethod.Post, new { @class = "forms-sample" }))
            {


                <div class="form-group">
                    <label for="exampleInputUsername1">Terminal Name</label>
                    @Html.EditorFor(model => model.TerminalName, new { htmlAttributes = new { @class = "form-control", placeholder = "TerminalName" } })
                    @Html.ValidationMessageFor(model => model.TerminalName, "", new { @class = "text-danger db" })

                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Terminal Number</label>
                    @Html.EditorFor(model => model.TerminalNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "TerminalNumber" } })
                    @Html.ValidationMessageFor(model => model.TerminalNumber, "", new { @class = "text-danger db" })

                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Security Pin</label>
                    @Html.EditorFor(model => model.SecurityPin, new { htmlAttributes = new { @class = "form-control", placeholder = "SecurityPin" } })
                    @Html.ValidationMessageFor(model => model.SecurityPin, "", new { @class = "text-danger db" })

                </div>
                <button type="submit" class="btn btn-lg btn-dark me-3"><p style="color:white">Submit</p></button>

            }
        </div>
    </div>
</div>
<script>
    setTimeout(function () {
        $("#msgalert").hide();
    }, 3500);
</script>