<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="col-lg-4  " style="background-color: white;text-align: center;">
          <h2 style="font-weight: 600;font-size: 28px;">@Model.CustomerName</h2>
          <p style="font-size: 15px;">1025 GATEWOOD AVENUE <br>@Model.BusinessAddress</p><br>
          <p style="font-size: 15px;">Tel @Model.Phone &nbsp;	&nbsp;	&nbsp;	&nbsp;	&nbsp; FAX @Model.Fax</p>
            <p style="font-size: 15px;">Invoice: @Model.InvoiceNumber 	&nbsp;	&nbsp;	&nbsp;	&nbsp;	&nbsp;  Date: @DateTime.Now </p>
          <div style="border-top: 1px solid black;" >
            <div class="row" style="text-align: left;">
              <p style="font-size: 15px;font-weight: 600;">CustomerName : @Model.CustomerName</p>
              <div style="padding: 25px;">
                <p style="font-size: 15px;">@Model.BusinessAddress</p>              
              </div> 
            </div>
         
          </div>
             @foreach (var invoice in Model.PointOfSaleDetails)
             {
               <div style="border-top: 1px solid black;">
                        <div class="row" style="text-align: left;">
                            <p style="font-size: 15px;">@invoice.ItemNumber-@invoice.ItemName</p>
                            <table style="border: none;" class="table">
                                <thead>
                                    <tr>
                                    <th scope="col">@invoice.OutUnit</th>
                                        <th scope="col">@invoice.InUnit @@ @invoice.AmountRetail </th>
                                        <th scope="col">@invoice.Total</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
               </div>
             }

        </div>
     </div>

</body>
</html>
