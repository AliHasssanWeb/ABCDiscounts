<div class="tab-content tab-content-basic">
    <hr style="width:90%;"/>
    <div class="row" id="OrderRow">
   <div class="col-md-6 col-lg-12 grid-margin stretch-card">
                        <div class="card card-rounded">
                            <div class="card-body">
                                <div class="row" style="justify-content:center;">
                                     <div class="col-sm-2 cp" onclick="window.location='@Url.Action("PreviousOrder","CustomerHomePage")'" >
                                        <div class="d-flex justify-content-between align-items-center" style="margin:10px;">
                                            <div class="circle-progress-width">
                                            @*    <div id="totaldelivered" class="progressbar-js-circle pr-2"></div>*@
                                             <img src="~/images/DeliveredOrder.png" style="width:70px"/>
                                            </div>
                                            <div>
                                                <p  class="text-small mb-2">Previous Orders</p>
                                                <h4 class="mb-0 fw-bold">@ViewBag.Previous</h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-2 cp" onclick="window.location='@Url.Action("PendingOrder","CustomerHomePage")'">
                                        <div class="d-flex justify-content-between align-items-center mb-2 mb-sm-0" style="margin:10px;">
                                            <div class="circle-progress-width">
                                              <!---  <div id="totalVisitors" class="progressbar-js-circle pr-2"></div>-->
                                              <img src="~/images/orderreceived.png" style="width:50px"/>
                                            </div>
                                            <div>
                                                <p  class="text-small mb-2">Submitted Orders</p>
                                                <h4 class="mb-0 fw-bold">@ViewBag.NewOrders</h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-2 cp" onclick="window.location='@Url.Action("InprocessOrder","CustomerHomePage")'">
                                        <div class="d-flex justify-content-between align-items-center" style="margin:10px;">
                                            <div class="circle-progress-width">
                                               <!-- <div id="visitperday" class="progressbar-js-circle pr-2"></div>-->
                                                <img src="~/images/orderprocess.png" style="width:50px"/>
                                            </div>
                                            <div class="">
                                                <p class="text-small mb-3">Inprocess Orders</p>
                                                <h4 class="mb-2 fw-bold ml-20">@ViewBag.Approved</h4>
                                            </div>
                                        </div>
                                    </div>
                                     <div class="col-sm-3 cp" onclick="window.location='@Url.Action("RejectedOrder","CustomerHomePage")'">
                                        <div class="d-flex justify-content-between align-items-center" style="margin:10px;">
                                            <div class="circle-progress-width">
                                         @*       <div id="rejectedorders" class="progressbar-js-circle pr-2"></div>*@
                                           <img src="~/images/order-Cancel.png" style="width:70px;"/>
                                            </div>
                                            <div style="margin-right:32%">
                                                <p   class="text-small mb-4">OnHold Orders</p>
                                                <h4 class="mb-0 fw-bold">@ViewBag.Rejected</h4>
                                            </div>
                                        </div>
                                    </div>  
                                    
                                 
                                </div>
                            </div>
                        </div>
                    </div>
    </div>
    <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview">
        
        <div class="row" style="padding:30px;">
            <div class="col-lg-8 d-flex flex-column">
                <div class="row flex-grow">
                    <div class="col-12 col-lg-4 col-lg-12 grid-margin stretch-card">
                        <div class="card card-rounded" style="background:aliceblue">
                            <div class="card-body">
                                <div class="d-sm-flex justify-content-between align-items-start">
                                    <div>
                                        <h4 class="card-title card-title-dash">Orders Summary </h4>
                                        <h5 class="card-subtitle card-subtitle-dash"></h5>
                                    </div>
                                    <div class="custom-span" id="performance-line-legend"></div>
                                </div>
                                <div class="chartjs-wrapper mt-5">
                                    <canvas id="performaneLine"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 d-flex flex-column">
                <div class="row flex-grow">
                    <div class="col-md-6 col-lg-12 grid-margin stretch-card">
                        <div class="card card-rounded" style="background:RGB(30, 59, 179);">
                            <div class="card-body pb-0">
                                <h4 class="card-title card-title-dash text-white mb-4">Access Summary</h4>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <p class="status-summary-ight-white mb-1" style="color: floralwhite;">Last Login</p>
                                        <h5 class="text-info">@Html.FormatValue("dd/MM/yyyy", @ViewBag.LastLogin?.ToString("dd/MM/yyyy"))</h5>
                                    </div> 
                                    <div class="col-sm-4">
                                        <p class="status-summary-ight-white mb-1" style="color: floralwhite;">Last Password Change</p>
                                        @if(ViewBag.LastChangePwdDate != null){
                                        <h5 class="text-info">@Html.FormatValue("dd/MM/yyyy", @ViewBag.LastChangePwdDate?.ToString("dd/MM/yyyy"))</h5>

                                        }
                                    </div>
                                    <div class="col-sm-4">
                                        <p class="status-summary-ight-white mb-1" style="color: floralwhite;">Last Order Date</p>
                                        <h5 class="text-info">@Html.FormatValue("dd/MM/yyyy", @ViewBag.lastOrder?.ToString("dd/MM/yyyy"))</h5>
                                    </div>
                                    <div class="col-sm-8">
                                        <div class="status-summary-chart-wrapper pb-4">
                                            <canvas id="status-summary" style="height:100px"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>

    </div>

</div>
<div class="container my-3">
    <div class="container-fluid mt-3 mb-3">
        
        <div class="row g-2" >
        
            @{ var j = 0; }
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    j = j + 1;

                    <div class="col-md-4">
                        <div class="card">
                            <div class="img-container" style="text-align:center">
                                @if (item.ItemImageByPath != null && item.ItemImageByPath != "")
                                {
                                    @*<img src="@item.ItemImageByPath" class="img-fluid" alt="">*@
                                    <div class="d-flex justify-content-between align-items-center p-2 first"> @*<span class="percent">-25%</span>*@ @*<span class="wishlist"><i class="fa fa-heart"></i></span>*@ </div> <img src="@item.ItemImageByPath" style="width:200px;height:200px" class="img-fluid" alt="">
                                }
                                else
                                {
                                    @*<img src="~/images/india-ranked-5th-in-pictorial-warnings-on-cigarette-packets.jpg" class="img-fluid" alt="">*@
                                    <div class="d-flex justify-content-between align-items-center p-2 first"> @*<span class="percent">-25%</span>*@ @*<span class="wishlist"><i class="fa fa-heart"></i></span>*@ </div> <img src="~/BannerImages/Coming-Soon.jpg" style="width:200px;height:200px" class="img-fluid" alt="">
                                }
                            </div>
                            <div class="product-detail-container">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="py-2 text-center" style="height:62px">@item.Name</h5> <span class="text-custom font-weight-bold">$@item.Retail</span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mt-2">
                                   @* <div class="ratings"> <i class="fa fa-star"></i> <span>4.5</span> </div>*@
                                    @*<div class="size"> <label class="radio"> <input type="radio" name="size1" value="small"> <span>S</span> </label> <label class="radio"> <input type="radio" name="size1" value="Medium" checked> <span>M</span> </label> <label class="radio"> <input type="radio" name="size1" value="Large"> <span>L</span> </label> </div>*@
                                </div>

                                <div class="mt-3">
                                    <button class="btn btn-custom btn-block" onclick="window.location.href='@Url.Action("ProductDetailsForCustomers", "CustomerHomePage", new { @area = "Customer", id = item.Id })'">
                                        <a class="text-white">Add to Cart</a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>

