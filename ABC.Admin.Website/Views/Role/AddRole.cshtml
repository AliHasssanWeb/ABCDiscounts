@model ABC.EFCore.Repository.Edmx.AspNetRole
@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@if (TempData["response"] != null)
{
 <div class="alert alert-primary" style="max-width: 46%;" id="msgalert">
        @TempData["response"].ToString()
    </div>
}


<div class="d-sm-flex align-items-center justify-content-between border-bottom">
    <ul class="nav nav-tabs" role="tablist">

        <li class="nav-item">
            <a class="nav-link " href="~/Users/AddUser" aria-controls="overview" aria-selected="true">Admin</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Users/ManageUser" aria-controls="overview" aria-selected="true">Existing Admins</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Users/BlockUser" role="tab" aria-selected="false">BlockUser</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Users/ChangePassword" role="tab" aria-selected="false">ChangePassword</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active ps-0" href="~/Role/AddRole" role="tab" aria-selected="false">Role</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Role/ManageRoles" role="tab" aria-selected="false">Existing Roles</a>
        </li>
      <li class="nav-item">
            <a class="nav-link " href="~/Activities/ActivityLogs" role="tab" aria-selected="false">AdminActivity Logs</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Activities/TerminalLogs" role="tab" aria-selected="false">TerminalLogs</a>
        </li>

    </ul>
</div>

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add Role</h4>
            @*<p class="card-description">
            Basic form layout
        </p>*@
            @using (Html.BeginForm("AddRole", "Role", FormMethod.Post, new { @class = "forms-sample" }))
            {


                <div class="form-group">
                    <label for="exampleInputUsername1">Role Name</label>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Role" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger db" })

                </div>
                <button type="submit" class="btn btn-lg btn-dark me-3"><p style="color:white">Submit</p></button>
                <span type="submit" class="btn btn-lg btn-light me-3"><p>Cancel</p></span>
                @*<button class="btn btn-light">Cancel</button>*@
            }
        </div>
    </div>
</div>
<script>
    setTimeout(function () {
        $("#msgalert").hide();
    }, 3500);
</script>