@model ABC.EFCore.Repository.Edmx.AspNetUser

@{
    ViewBag.Title = "Add User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@if (TempData["response"] != null)
{
    <div class="alert alert-primary" style="max-width: 46%;" id="msgalert">
        @TempData["response"].ToString()
    </div>
}
<div class="d-sm-flex align-items-center justify-content-between border-bottom">
    <ul class="nav nav-tabs" role="tablist">

        <li class="nav-item">
            <a class="nav-link active ps-0" href="~/Users/AddUser" aria-controls="overview" aria-selected="true">Admin</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Users/ManageUser" aria-controls="overview" aria-selected="true">Existing Admins</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Users/BlockUser" role="tab" aria-selected="false">BlockUser</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Users/ChangePassword" role="tab" aria-selected="false">ChangePassword</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Role/AddRole" role="tab" aria-selected="false">Role</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Role/ManageRoles" role="tab" aria-selected="false">Existing Roles</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Activities/ActivityLogs" role="tab" aria-selected="false">AdminActivity Logs</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="~/Activities/TerminalLogs" role="tab" aria-selected="false">TerminalLogs</a>
        </li>

    </ul>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Add Admin</h4>
        @using (Html.BeginForm("AddUser", "Users", FormMethod.Post, new { @class = "forms-sample", enctype = "multipart/form-data" }))
        {

            <div class="panel panel-primary ">
                <div class="panel-heading">General Information</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">First Name</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name", } })
                                    @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger db" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Last Name</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Lastname, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name", } })
                                    @Html.ValidationMessageFor(model => model.Lastname, "", new { @class = "text-danger db" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Email</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email", } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger db" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Contact No.</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Contact No.", } })
                                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger db" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Password</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "form-control", placeholder = "Password", Type = "password" } })
                                    @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger db" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Confirm Password</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.ConfirmPasswordHash, new { htmlAttributes = new { @class = "form-control", placeholder = "Password", Type = "password" } })
                                    @Html.ValidationMessageFor(model => model.ConfirmPasswordHash, "", new { @class = "text-danger db" })
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="panel panel-primary ">
                <div class="panel-heading">Address Information</div>
                <div class="panel-body">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">City</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", placeholder = "City" } })
                                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger db" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Postcode</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Post Code" } })
                                    @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger db" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">State</label>
                                <div class="col-sm-9">
                                    @Html.DropDownList("State", (IEnumerable<SelectListItem>)ViewBag.States, "--Choose State--", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.StateId, "", new { @class = "text-danger db" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Profile Image </label>
                                <div class="col-sm-9">
                                    <input type="file" class="form-control" id="file" name="file" asp-for="Imageupload">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <label class="col-sm-1 col-form-label">Address </label>
                                <div class="col-sm-9" style="margin-left: 4%">
                                    @Html.TextAreaFor(model => model.Address, new { @class = "form-control", placeholder = "Address", style = "height:65px" })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger db" })
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-dark me-3"><p style="color:white">Submit</p></button>
            <span class="btn btn-lg btn-light me-3"><p>Cancel</p></span>




        }
    </div>

</div>
<script>
    setTimeout(function () {
        $("#msgalert").hide();
    }, 3500);
</script>
